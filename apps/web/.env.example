# ===========================================
# eCom Environment Variables
# ===========================================
# Copy this file to .env.local for development
# Never commit .env.local to version control
# ===========================================

# API Configuration
# -----------------
# Base URL for the API (DummyJSON for development)
VITE_API_URL=https://dummyjson.com
VITE_AUTH_URL=https://dummyjson.com/auth
VITE_PAYMENT_URL=https://payments.example.com

# Request timeout in milliseconds
VITE_API_TIMEOUT=10000

# Feature Flags
# -------------
# Enable analytics tracking (Google Analytics, Segment, etc.)
VITE_ENABLE_ANALYTICS=false

# Enable dark mode by default
VITE_DEFAULT_DARK_MODE=false

# Enable PWA features (service worker, offline support)
VITE_ENABLE_PWA=false

# Enable mock API responses (for testing without backend)
VITE_USE_MOCK_API=false

# Observability
# -------------
# Sentry DSN for error tracking (leave empty to disable)
VITE_SENTRY_DSN=

# LogRocket App ID for session replay (leave empty to disable)
VITE_LOGROCKET_ID=

# Performance
# -----------
# Enable Web Vitals reporting to console
VITE_REPORT_WEB_VITALS=true

# E-commerce Settings
# -------------------
# Default currency code
VITE_DEFAULT_CURRENCY=USD

# Tax rate percentage (e.g., 8.25 for 8.25%)
VITE_TAX_RATE=8.25

# Free shipping threshold
VITE_FREE_SHIPPING_THRESHOLD=50

# ===========================================
# Production Environment Variables
# (Set these in your hosting platform)
# ===========================================
# VITE_API_URL=https://api.yourdomain.com/v1
# VITE_AUTH_URL=https://api.yourdomain.com/auth
# VITE_ENABLE_ANALYTICS=true
# VITE_SENTRY_DSN=https://xxx@sentry.io/xxx
# VITE_LOGROCKET_ID=your-app/your-project
